{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "downlevelIteration": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "dom",
      "es2017"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@/*": [
        "*"
      ]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es5",
    "incremental": true
  },
  "exclude": [
    "node_modules",
    "next.config.js",
    "shorturl.js",
    "sentry.js",
    "injectEnv.js"
  ],
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
